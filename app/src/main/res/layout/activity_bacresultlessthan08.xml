<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BACResultLessThan08"
    android:background="@drawable/a8cfd15e1634174251a7db414cd898ad">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id= "@+id/Less_Than_08_Linear"
        android:orientation="vertical">



        <com.tomer.fadingtextview.FadingTextView
            android:id="@+id/fadingTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:textSize="25sp"

            android:layout_marginLeft="140dp"
            app:texts="@array/CongratsText"
            android:fontFamily="@font/fascinateregular"
            app:timeout="100"
            android:layout_marginBottom="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "You are less Than 0.08! Your BAC is:"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/fascinateregular"
            android:textSize="25sp"
            android:layout_marginBottom="50dp"
          />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="@font/fascinateregular"
            android:text="pl"
            android:textSize="50sp"
            android:id="@+id/lessthan08"
            android:textColor="@color/colorAccent"
            android:layout_marginLeft="120dp"
            android:layout_marginBottom="50dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:background="@drawable/smile" />
        </LinearLayout>
    </LinearLayout>




</FrameLayout>